{
  "name": "mermaid-chart-mcp",
  "version": "1.0.0",
  "description": "一个具备自动生成Mermaid图表及SVG美化功能的MCP服务器",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "chart",
    "diagram",
    "svg",
    "code-analysis",
    "typescript",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "mermaid": "^10.6.1",
    "puppeteer": "^21.6.1",
    "tree-sitter": "^0.20.4",
    "tree-sitter-typescript": "^0.20.3",
    "tree-sitter-javascript": "^0.20.1",
    "marked": "^9.1.6",
    "rough.js": "^4.6.6",
    "jsdom": "^23.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 