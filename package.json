{
  "name": "mermaid-chart-mcp",
  "version": "1.0.0",
  "description": "一个专注于Mermaid图表渲染的简化MCP服务器",
  "type": "module",

  "main": "dist/simple-mcp-server.js",
  "types": "dist/simple-mcp-server.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node --loader ts-node/esm src/simple-mcp-server.ts",
    "start:stdio": "node --loader ts-node/esm src/simple-mcp-server.ts",
    "start:sse": "node --loader ts-node/esm src/server.ts --sse",
    "start:sse:port": "node --loader ts-node/esm src/server.ts --sse --port=3001",

          "build": "tsc"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "chart",
    "diagram",
    "svg",
    "simple",
    "cursor",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "jsdom": "^23.0.1",
    "mermaid": "^10.6.1",
    "ts-node": "^10.9.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  },
  "optionalDependencies": {
    "marked": "^9.1.6",
    "puppeteer": "^21.6.1",
    "tree-sitter": "^0.20.4",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-typescript": "^0.20.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "tree-sitter",
        "puppeteer",
        "marked"
      ]
    }
  }
}
