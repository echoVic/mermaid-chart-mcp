{
  "name": "mermaid-chart-mcp",
  "version": "1.0.0",
  "description": "一个专注于Mermaid图表渲染的简化MCP服务器",
  "type": "module",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "bin": {
    "mermaid-mcp": "./dist/server/index.js"
  },
  "exports": {
    "import": "./dist/server/index.js",
    "types": "./dist/server/index.d.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server/index.js",
    "start:stdio": "node dist/server/index.js",
    "start:sse": "node dist/server/index.js --sse",
    "start:sse:port": "node dist/server/index.js --sse --port=3001",
    "start:dev": "node --loader ts-node/esm src/server/index.ts",
    "start:dev:sse": "node --loader ts-node/esm src/server/index.ts --sse",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "mermaid",
    "chart",
    "diagram",
    "svg",
    "simple",
    "cursor",
    "model-context-protocol",
    "typescript",
    "esm"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "jsdom": "^23.0.1",
    "mermaid": "^10.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2"
  },
  "optionalDependencies": {
    "marked": "^9.1.6",
    "puppeteer": "^21.6.1",
    "tree-sitter": "^0.20.4",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-typescript": "^0.20.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "tree-sitter",
        "puppeteer",
        "marked"
      ]
    }
  }
}
